NODE_ENV=development
PORT=5000

# Use a proper DATABASE_URL in production envs (e.g. postgres://user:pass@host:5432/db)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/postgres

# Optional PostgreSQL tuning
PG_POOL_MAX=10
PG_IDLE_TIMEOUT=30000
PG_CONN_TIMEOUT=5000

# CORS origin for production (set to your domain)
CORS_ORIGIN=*
